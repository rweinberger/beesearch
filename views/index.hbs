<!DOCTYPE HTML>
<html>

{{>head}}

<body>
  <div id='hexagons'>
    <div id='hex-text'></div>
    {{#each sensors}}
      <div id='hex{{id}}' class='hexagon {{class}}' data-toggle="modal" data-target="#modal{{id}}"><span></span>
        <img id='img{{id}}' class='hex-img' src='{{img}}'/>
      </div>
      {{>modal-stream}}
    {{/each}}
    <div id='hex4' class='hexagon four' data-toggle="modal" data-target="#modalSettings">
      <span></span><img class='hex-img' src='/images/settings.png'/>
    </div>
    {{>modalSettings}}
    <div id='hex5' class='hexagon five' data-toggle="modal" data-target="#modalAbout">
      <span></span><img class='hex-img' src='/images/help.png'/>
    </div>
    {{>modalAbout}}
    <div id='hex6' class='smallHex six' data-toggle="modal" data-target="#modalHealth">
      <span></span>
    </div>
    {{>modalHealth}}
  </div>
  <div id='connectivity'>
    Server: <div class='state'>Disconnected</div><br>
    Sensors: <div class='sensorState inline'>Disconnected</div>
  </div>

</body>
<script src="/scripts/hexAnimate.js"></script>
<script src='/scripts/liveResults.js'></script>
<script src='/scripts/setSettings.js'></script>
</html>